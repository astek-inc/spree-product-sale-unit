<% content_for :page_title do %>
    <%= Spree.t(:sale_units) %>
<% end %>

<% content_for :page_actions do %>
    <%= button_link_to Spree.t(:new_sale_unit), new_object_url, { :class => "btn-success", :icon => 'add', 'data-update' => 'new_sale_unit', :id => 'new_sale_unit_link' } %>
<% end %>

<% if @sale_units.any? %>
    <table class="table" id='listing_properties' data-hook>
      <thead>
      <tr data-hook="listing_properties_header">
        <th><%= Spree.t(:name) %></th>
        <th><%= Spree.t(:description) %></th>
        <th class="actions"></th>
      </tr>
      </thead>
      <tbody>
      <% @sale_units.each do |sale_unit| %>
          <tr id="<%= spree_dom_id sale_unit %>" data-hook="listing_sale_unit_row">
            <td><%= sale_unit.name %></td>
            <td><%= sale_unit.description %></td>
            <td class="actions actions-2 text-right">
              <%= link_to_edit(sale_unit, :no_text => true) %>
              <%= link_to_delete(sale_unit, :no_text => true) %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    <div class="alert alert-info no-objects-found">
      <%= Spree.t(:no_resource_found, resource: Spree.t(:sale_units)) %>,
      <%= link_to Spree.t(:add_one), new_object_url %>!
    </div>
<% end %>

